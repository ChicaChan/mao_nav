{
  "name": "mao-nav-monorepo",
  "version": "1.0.0",
  "description": "猫猫导航 + 博客站 Monorepo",
  "private": true,
  "scripts": {
    "dev": "npm run dev:nav",
    "dev:nav": "cd nav && npm run dev",
    "dev:blog": "cd blog && npm run dev",
    "dev:all": "concurrently \"npm run dev:nav\" \"npm run dev:blog\"",
    "build": "npm run build:nav && npm run build:blog",
    "build:nav": "cd nav && npm run build",
    "build:blog": "cd blog && npm run build",
    "preview": "npm run preview:nav",
    "preview:nav": "cd nav && npm run preview",
    "preview:blog": "cd blog && npm run preview",
    "lint": "npm run lint:nav && npm run lint:blog",
    "lint:nav": "cd nav && npm run lint",
    "lint:blog": "cd blog && npm run lint",
    "install:all": "npm install && cd nav && npm install && cd ../blog && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "nav",
    "blog"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "浮浮酱",
  "license": "MIT"
}
